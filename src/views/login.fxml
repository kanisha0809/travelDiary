<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Point3D?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="500.0" prefWidth="700.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="controllers.LoginController">
   <rotationAxis>
      <Point3D />
   </rotationAxis>
   <left>
      <AnchorPane prefHeight="500.0" prefWidth="350.0" style="-fx-background-color: #182052;" BorderPane.alignment="CENTER" />
   </left>
   <right>
      <AnchorPane prefHeight="500.0" prefWidth="350.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="userNameField" layoutX="124.0" layoutY="159.0" promptText="User Name" style="-fx-background-color: transparent; -fx-border-color: #182052; -fx-border-width: 0 0 2px 0;" />
            <PasswordField fx:id="passwordField" layoutX="124.0" layoutY="250.0" promptText="Password" style="-fx-background-color: transparent; -fx-border-color: #182052; -fx-border-width: 0px 0px 2px 0px;" />
            <Button id="loginButton" layoutX="176.0" layoutY="369.0" mnemonicParsing="false" style="-fx-background-color: #182052;" text="Login" textFill="WHITE" onAction="#handleLoginButtonAction"/>
            <Button id="RegisterButton" layoutX="161.0" layoutY="423.0" mnemonicParsing="false" style="-fx-background-color: #182052;" text="New User? " textFill="WHITE" onAction="#handleRegisterButtonAction"/>
         </children>
      </AnchorPane>
   </right>
</BorderPane>
